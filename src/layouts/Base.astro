---
import "../styles/main.css";

import "@fontsource-variable/inter";
import interFile from "@fontsource-variable/inter/files/inter-latin-wght-normal.woff2?url";

import BrandGithub from "@tabler/icons/outline/brand-github.svg";
import BrandDiscord from "@tabler/icons/outline/brand-discord.svg";
import IconApps from "@tabler/icons/outline/apps.svg";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1" />
        <link href={interFile} rel="preload" as="font" type="font/woff2" crossorigin="anonymous" />
    </head>

    <body class="grid grid-cols-1 w-full justify-items-center bg-stone-950">
        <nav class="flex flex-row gap-2 items-center m-2 px-4 py-2 rounded-lg justify-center">
            <span class="w-max"> MH:Wilds Builder </span>

            <a href="https://docs.wilds.mhdb.io/#introduction" rel="external" target="_blank" class="btn">
                <IconApps width="20" height="20" />
                <span>API</span>
            </a>
            <!--
            <a href="https://github.com/viperML/mh-app" rel="external" target="_blank" class="btn">
                <BrandGithub width="20" height="20" />
                <span>GitHub</span>
            </a>

            <a href="https://discord.com/invite/6GEHHQh" rel="external" target="_blank" class="btn">
                <BrandDiscord width="20" height="20" />
                <span>Discord</span>
            </a> -->
        </nav>

        <slot />

        <footer>
            <div>
                Written in
                <a href="https://vuejs.org/" rel="external" target="_blank">Vue.js</a>
                &
                <a href="https://astro.build/" rel="external" target="_blank">Astro</a>
            </div>
            <div>
                <button id="reset">Reset Page</button>
            </div>
        </footer>
    </body>
</html>

<style>
    .btn {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 0.5rem;
        border: 1px solid;
        border-color: var(--color-neutral-800);
        padding-left: 0.75rem;
        padding-right: 0.75rem;
        padding-top: 0.375rem;
        padding-bottom: 0.375rem;
        border-radius: 0.5rem;
    }

    .btn:hover {
        background-color: var(--color-neutral-800);
    }

    footer {
        display: flex;
        flex-direction: column;
        gap: 5px;
        justify-content: center;
        align-items: center;
        padding: 20px;
        color: var(--color-neutral-700);
    }

    footer :is(a, button):hover {
        color: var(--color-neutral-500);
        /* color: red; */
    }
</style>

<script>
    import { assert } from "tsafe/assert";
    const resetButton = document.querySelector("#reset");
    assert(resetButton);

    resetButton.addEventListener("click", () => {
        localStorage.clear();
        window.location.reload();
    });
</script>
