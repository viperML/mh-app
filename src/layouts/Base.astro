---
import "../styles/main.css";

import BrandGithub from "@tabler/icons/outline/brand-github.svg";
import BrandDiscord from "@tabler/icons/outline/brand-discord.svg";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1" />
    </head>

    <body>
        <nav>
            <div>
                Monster Hunter Wilds <span class="font-black">Calculator</span>
            </div>

            <div class="nav-links flex flex-row items-center gap-2">
                <a href="https://github.com/viperML/mh-app" rel="external" target="_blank" class="btn">
                    <BrandGithub width="20" height="20" />
                    <span>GitHub</span>
                </a>

                <a href="https://discord.com/invite/6GEHHQh" rel="external" target="_blank" class="btn">
                    <BrandDiscord width="20" height="20" />
                    <span>Discord</span>
                </a>
            </div>
        </nav>

        <main class="flex flex-col items-center">
            <slot />
        </main>

        <footer>
            <div>
                Written in
                <a href="https://vuejs.org/" rel="external" target="_blank">Vue.js</a>
                &
                <a href="https://astro.build/" rel="external" target="_blank">Astro</a>
            </div>
            <div>
                <button id="reset">Reset Page</button>
            </div>
        </footer>
    </body>
</html>

<style>
    .btn {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 0.5rem;
        border: 1px solid;
        border-color: var(--color-neutral-800);
        padding-left: 0.75rem;
        padding-right: 0.75rem;
        padding-top: 0.375rem;
        padding-bottom: 0.375rem;
        border-radius: 0.5rem;
    }

    .btn:hover {
        background-color: var(--color-neutral-800);
    }

    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 12px 24px;
        background-color: black;
        border-bottom: 1px solid rgb(46, 46, 46);
    }

    footer {
        display: flex;
        flex-direction: column;
        gap: 5px;
        justify-content: center;
        align-items: center;
        padding: 20px;
        color: var(--color-neutral-700);
    }

    footer :is(a, button):hover {
        color: var(--color-neutral-500);
        /* color: red; */
    }
</style>

<script>
    import { assert } from "tsafe/assert";
    const resetButton = document.querySelector("#reset");
    assert(resetButton);

    resetButton.addEventListener("click", () => {
        localStorage.clear();
        window.location.reload();
    });
</script>
