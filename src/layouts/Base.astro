---
import "../styles/main.css";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width,initial-scale=1" />
    </head>

    <body>
        <nav>
            <div>
                Monster Hunter Wilds <span class="font-black">Calculator</span>
            </div>

            <div class="nav-links">
                <a href="https://github.com/viperML/mh-app" rel="external" target="_blank">
                    <!-- Github logo -->
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        width="24"
                        height="24"
                        stroke-width="2"
                    >
                        <path
                            d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
                        ></path>
                    </svg>
                </a>
            </div>
        </nav>

        <main class="flex flex-col items-center">
            <slot />
        </main>

        <footer>
            <div>
                Written in
                <a href="https://vuejs.org/" rel="external" target="_blank">Vue.js</a>
                &
                <a href="https://astro.build/" rel="external" target="_blank">Astro</a>
            </div>
            <div>
                <button id="reset">Reset Page</button>
            </div>
        </footer>
    </body>
</html>

<style>
    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        background-color: black;
        border-bottom: 1px solid gray;
    }

    .nav-links a {
        padding: 4px;
        display: block;
        border-radius: 30%;
    }

    .nav-links a:hover {
        background-color: rgb(59, 59, 59);
    }

    footer {
        display: flex;
        flex-direction: column;
        gap: 10px;
        justify-content: center;
        align-items: center;
        padding: 20px;
        color: rgb(73, 73, 73);
    }

    footer button {
        text-decoration: underline;
        cursor: pointer;
    }
</style>

<script>
    import { assert } from "tsafe/assert";
    const resetButton = document.querySelector("#reset");
    assert(resetButton);

    resetButton.addEventListener("click", () => {
        localStorage.clear();
        window.location.reload();
    });
</script>
