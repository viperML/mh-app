{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "head": {
      "$ref": "#/definitions/armorPiece"
    },
    "chest": {
      "$ref": "#/definitions/armorPiece"
    },
    "arms": {
        "$ref": "#/definitions/armorPiece"
    }
  },
  "required": ["$schema", "head", "chest", "arms"],
  "definitions": {
    "armorPiece": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "skills": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "value": {
                  "type": "integer"
                }
              },
              "required": ["name", "value"]
            }
          },
          "slots": {
            "type": "array",
            "items": {
              "type": "integer"
            }
          }
        },
        "required": ["name", "skills", "slots"]
      }
    }
  }
}
